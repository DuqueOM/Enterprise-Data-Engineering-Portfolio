[bandit]
# Bandit security scanner configuration
# https://bandit.readthedocs.io/en/latest/config.html

# Exclusions
exclude_dirs = [
    '/tests',
    '/.venv',
    '/venv',
    '/__pycache__',
    '/artifacts',
    '/mlruns',
    '/wandb'
]

# Tests to skip (comma-separated list)
skips = [
    'B101',  # assert_used - common in tests and data validation
    'B601',  # paramiko_calls - not using paramiko
    'B602',  # subprocess_popen_with_shell_equals_true - we validate inputs
]

# Severity level: LOW, MEDIUM, HIGH
# Only fail on HIGH severity issues
severity = MEDIUM

# Confidence level: LOW, MEDIUM, HIGH
# Only fail on HIGH confidence issues
confidence = MEDIUM
